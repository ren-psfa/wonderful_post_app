<header><%= render partial: "layouts/navbar" %></header>


<p id="notice"><%= notice %></p>


<h1>マイページ</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">本文</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>

      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to '詳細', article, class: "btn-success" %>
            <%= link_to '編集', edit_article_path(article), class: "btn btn-warning" %>
            <%= link_to '削除', article, class: "btn btn-danger", method: :delete, data: { confirm: '本当に削除しますか？'}  %>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>
 <%= link_to '作成', new_article_path %>
